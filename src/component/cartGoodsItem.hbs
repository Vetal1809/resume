<div class="card col-12 mb-3">
    <div class="row">
        <div class="col-2 m-1"><img src="{{image}}"></div>
        <div class="col-4">
            <h5 class="mb-1">{{name}}</h5>
            <div>{{description}}</div>
        </div>
        <div class="row col-2">
            {{#with price}}
            <div class="mt-4">{{title}}</div>
            <div>{{value}}</div>
            {{/with}}
        </div>
        <div class="col-2">
            <div class="mt-5">{{amount}}</div>
        </div>
        <div class="col-2 row">
            {{#each buttons}}
            {{#if isPrimary}}
            <button class="btn btn-sm btn-primary col-9 mt-3 mb-3">{{text}}</button>
            {{/if}}
            {{#if isDanger}}
            <button class="btn btn-sm btn-outline-danger col-9 mb-3">{{text}}</button>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>