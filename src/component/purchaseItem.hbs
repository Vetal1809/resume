<div class="row col-3">
    <div>{{number}}</div>
    <div><b>{{status}}</b></div>
</div>
<div class="row col-2">
    {{#with amount}}
    <div class="mt-3">{{title}}</div>
    <div><b>{{value}}</b></div>
    {{/with}}
</div>
<div class="row col-4">
    {{#each images}}
    <div class="row col-4">
        <div class="m-1 mt-3">
            <img src="{{this}}" width="40px">
        </div>
    </div>
    {{/each}}
</div>
<div class="col-3 ms-5 mt-3">
    {{#with button}}
    {{#if isPrimary}}
    <button class="btn btn-primary btn-sm col-7" href="{{linl}}" target="blank">{{text}}</button>
    {{/if}}
    {{/with}}
</div>
<div>
    <hr>
</div>