<div>
    <div>
        <h1>{{> title data="shopcart" big=true}}</h1>
    </div>

    <main>
        <section class="mb-5">
            <div class="card col-12">

                {{#with navigation}}
                <div class="nav">
                    {{#each links}}
                    <div class="row nav-item px-2">
                        <a class="nav-link active" href="{{href}}" target="blank">{{text}}</a>
                    </div>
                    {{/each}}
                    <div class="pt-2 ps-2">Disabled</div>
                </div>
                {{/with}}
            </div>
        </section>
        <hr>
        <section>
            {{#with header}}
            <h1>{{title}}</h1>
            {{#with button}}
            <div class="col-3 mt-5 mb-5">
                <button class="btn btn-outline-secondary" href="{{link}}" target="blank">{{text}}</button>
            </div>
            {{/with}}
            {{/with}}
        </section>


        <div>
            <hr>
        </div>
        <section class="mt-5 mb-5">
            {{#each goodsBlock}}
            {{> cartGoodsItem}}
            {{/each}}
        </section>
        <div>
            <hr>
        </div>
        <section>
            <div class="row">
                {{#with total}}
                <h1>{{title}}</h1>
                <h1>{{amount}}</h1>
                <p>{{delivery}}</p>
                <div class="col-5">
                    {{#each buttons}}
                    {{#if isSuccess}}
                    <button class="btn btn-success text-light mb-3" href="{{link}}" target="blank">{{text}}</button>
                    {{/if}}
                    {{#if isOutline}}
                    <button class="btn btn-outline-success" href="{{link}}" target="blank">{{text}}</button>
                    {{/if}}
                    {{/each}}
                </div>
                {{/with}}
            </div>
        </section>
        <div>
            <hr>
        </div>
        <section>
            <div class="row">
                {{#with goodsOtherBlock}}
                <h3 class="text-center m-3">{{title}}</h3>
                <div class="row">
                    {{#each cards}}
                    <ul class="card col-4 my-3">
                        <img src="{{image}}">
                        <div>
                            <div class="card-title m-1">{{title}}</div>
                            {{#if isHot}}
                            <span class="badge text-bg-warning rounded-pill">Hot</span>
                            {{/if}}
                            {{#if idNew}}
                            <span class="badge text-bg-primary rounded-pill">New</span>
                            {{/if}}
                        </div>
                        <div class="card-body p-1">{{description}}</div>
                    </ul>
                    {{/each}}
                </div>
                {{/with}}
            </div>
        </section>
        <div>
            <hr>
        </div>
        <section class="mt-5 mb-5">
            {{#with subscribe}}
            <div class="alert text-bg-dark">
                <h2 class="ms-2 mt-2 mb-4">{{header}}</h2>
                <div class="ms-2 mb-5">{{description}}</div>
                {{#each buttons}}
                <div class="row ms-2">
                    <button class="btn btn-primary col-3 mb-3" href="{{link}}" target="blank">{{text}}</button>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </section>
        <div>
            <hr>
        </div>
        <footer>
            <div class="row">
                <ul class="nav">
                    {{#each footer}}
                    <div class="col-2">
                        {{#each this}}
                        <li class="nav-item px-3">
                            <a class="nav-link {{#if @last}} disabled {{/if}}" target="blank">
                                {{text}}</a>
                        </li>
                        {{/each}}
                    </div>
                    {{/each}}
                </ul>
            </div>
        </footer>
    </main>
</div>